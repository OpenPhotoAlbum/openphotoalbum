{
	"name": "@photogate/compreface-sdk",
	"version": "0.0.0-alpha.8",
	"type": "module",
	"main": "./dist/index.cjs",
	"source": "./src/index.ts",
	"typings": "lib/index.d.ts",
	"exports": {
		"types": "./types",
		"require": "./dist/index.cjs",
		"default": "./dist/index.modern.js"
	},
	"nodemonConfig": {
		"ignore": [
			"**/dist/**",
			"**/sample/**"
		],
		"delay": 2500
	},
	"module": "./dist/index.module.js",
	"unpkg": "./dist/index.umd.js",
	"scripts": {
		"prepare": "npm run lint && npm run test && rm -rf dist && npm run build",
		"build": "rm -rf dist && microbundle",
		"build-local": "npm run build && cp $(npm pack | tail -n 1) ~",
		"dev": "microbundle watch",
		"test": "jest ./src",
		"test:watch": "jest ./src --watchAll",
		"lint": "eslint ./src/**/* --ext .js,.jsx",
		"serve:coverage": "cd ./coverage/lcov-report && python3 -m http.server 5544"
	},
	"devDependencies": {
		"@types/node": "^18.15.11"
	},
	"dependencies": {
		"@jest/globals": "^29.5.0",
		"@photogate/compreface-sdk": "^0.0.0-alpha.5",
		"@types/jest": "^29.5.0",
		"@typescript-eslint/eslint-plugin": "^5.57.0",
		"@typescript-eslint/parser": "^5.57.0",
		"dotenv": "^16.0.3",
		"eslint": "^8.37.0",
		"jest": "^29.5.0",
		"microbundle": "^0.15.1",
		"native-querystring": "^1.1.1",
		"ts-jest": "^29.1.0"
	}
}
